#!/usr/bin/env ruby

require_relative '../config/environment'
require 'thor'

class Cli < Thor
  desc 'add_vehicle VIN', 'Add a vehicle by VIN'
  def add_vehicle(vin)
    result = $app.add_vehicle(vin: vin)

    case result.status
    when :created
      puts "Vehicle added: #{result.id}"
    when :unprocessable_entity, :service_unavailable
      puts result.errors
    end
  end

  desc 'fetch_vehicles', 'Fetch all vehicles'
  def fetch_vehicles
    result = $app.fetch_vehicles
    puts JSON.pretty_generate(result.vehicles.as_json)
  end

  desc 'fetch_vehicle ID', 'Fetch a vehicle by ID'
  def fetch_vehicle(id)
    result = $app.fetch_vehicle(id: id)

    case result.status
    when :ok
      puts JSON.pretty_generate(result.vehicle.as_json)
    when :not_found
      puts "Vehicle not found"
    end
  end
end

Cli.start
